  <div class="main">
    <div class="top">
      <h2 class="dash">UPDATE CUSTOMER</h2>
      <div class="logout">
        <button class="lbtn" onclick="return logout();"><i class="fa fa-sign-out"></i>Logout</button>
      </div>
    </div>
  </div>

  <div class="end">
    <div class="add">
      <div class="heading1">
        CUSTOMER
      </div>
      <div class="cform">
        <div class="heading2">
          UPDATE CUSTOMER
        </div>
        <div class="details">
          <form action="">
            <div class="form-control">
              <label for="cname">Customer name:</label>
              <input type="text" name="cname" id="cname" value="<%=results[0].cus_name%>" autocomplete="OFF"
                onblur="return isCustomer(document.getElementById('cname').value)">
              <span class="fa fa-check"></span>
              <i class="fa fa-times wrong"></i>
            </div>

            <div class="form-control">
              <label for="ccontact">Customer contact:</label>
              <input type="text" name="ccontact" id="ccontact" value="<%=results[0].cus_contact%>" autocomplete="OFF"
                onblur="return isLength(10,document.getElementById('ccontact'),'ccontact')"
                onkeypress="return isContact(event,'ccontact')" maxlength="10">
              <span class="fa fa-check"></span>
              <i class="fa fa-times wrong"></i>
            </div>

            <div class="form-control">
              <label for="cemail">Customer email:</label>
              <input type="text" name="cemail" id="cemail" value="<%=results[0].cus_email%>" autocomplete="OFF"
                onblur="return isemail(document.getElementById('cemail').value)">
              <span class="fa fa-check"></span>
              <i class="fa fa-times wrong"></i>
            </div>

            <div class="form-control">
              <label for="caddress">Customer address:</label>
              <input type="text" name="caddress" id="caddress" value="<%=results[0].cus_address%>" autocomplete="OFF"
                onblur="return isAddress(document.getElementById('caddress').value)" maxlength="100">
              <span class="fa fa-check"></span>
              <i class="fa fa-times wrong"></i>
            </div>

            <div class="genderspace" onclick="isOneChecked()">
              <label for="gender" class="gender1">Customer gender : </label>

              <%if(results[0].cus_gender=='MALE'){%>
              <label for="male" class="gender">&nbsp Male </label>
              <input type="radio" name="gender" id="male" value="male" checked>
              <label for="female" class="gender">&nbspFemale </label>
              <input type="radio" name="gender" id="female" value="female">
              <label for="others" class="gender">&nbspOthers </label>
              <input type="radio" name="gender" id="others" value="others">
              <%}%>
                      <%if(results[0].cus_gender=='FEMALE'){%>
              <label for="male" class="gender">&nbsp Male </label>
              <input type="radio" name="gender" id="male" value="male">
              <label for="female" class="gender">&nbspFemale </label>
              <input type="radio" name="gender" id="female" value="female" checked>
              <label for="others" class="gender">&nbspOthers </label>
              <input type="radio" name="gender" id="others" value="others">
              <%}%>                    
                      <%if(results[0].cus_gender=='OTHERS'){%>
              <label for="male" class="gender">&nbsp Male </label>
              <input type="radio" name="gender" id="male" value="male">
              <label for="female" class="gender">&nbspFemale </label>
              <input type="radio" name="gender" id="female" value="female">
              <label for="others" class="gender">&nbspOthers </label>
              <input type="radio" name="gender" id="others" value="others" checked>
              <%}%>                         
                  </div>
                   
                   <button class="ubutton" onclick="return updateCustomer('<%=results[0].cus_id%>');">Update</button>
          </form>
        </div>
      </div>
    </div>
  </div>
